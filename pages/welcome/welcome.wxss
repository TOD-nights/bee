.container {
  background-color: #fff;
  height: 100vh;
}
.poster {
  width: 100vw;
  height: 100vh;
}
.poster .poster-image {
  width: 100vw;
  height: calc(100vw / 0.603);
}
.poster .btn-box {
  margin-top: 50rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  column-gap: 20rpx;
}
.poster .btn-box .btn-button {
  background-color: #f6d023;
  display: flex;
  align-items: center;
  padding: 20rpx 70rpx;
  column-gap: 10rpx;
  border-radius: 20rpx;
  box-shadow: 5rpx 5rpx 5rpx #ccc;
}
.poster .btn-box .btn-icon {
  width: 50rpx;
  height: 50rpx;
}
.poster .btn-box .btn-text {
  font-size: 1.1rem;
  font-weight: bold;
}
.poster .poster-tip {
  position: fixed;
  z-index: 11;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, .6);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  row-gap: 40rpx;
}
.poster .image-box {
  width: 70%;
  height: calc(70vw / 0.75);
}
.poster .image-box .poster-tip-image {
  width: 100%;
  height: 100%;
  border-radius: 40rpx;
}
.poster .poster-tip-close {
  width: 60rpx;
  height: 60rpx;
}
.agreement-popup {
  position: fixed;
  z-index: 20;
  top: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, .6);
}
.agreement-popup .agreement {
  margin-top: 30vh;
  height: 70vh;
  background-color: #fff;
  overflow: auto;
  padding: 40rpx 40rpx 80rpx;
  border-radius: 40rpx 40rpx 0 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.agreement-popup .agreement .title {
  font-weight: bold;
  font-size: 1.3rem;
  margin: 20rpx 0;
}
.agreement-popup .agreement .content .row {
  margin-top: 15rpx;
  font-size: 26rpx;
}
.agreement-popup .agreement .btn-box {
  display: flex;
  padding: 30rpx 0;
  column-gap: 20rpx;
}
.agreement-popup .agreement .btn-box .btn {
  width: 300rpx;
  border-radius: 50rpx;
  font-size: 30rpx;
  font-weight: bold;
}
.agreement-popup .agreement .btn-box .btn-refuse {
  border: 1rpx solid #777;
  color: #777;
}
.agreement-popup .agreement .btn-box .btn-confirm {
  border: 1rpx solid #f6d023;
  background-color: #f6d023;
}