/* pages/pindan/pindan.wxss */
page{
  background-color: #efefef;
}
.shopinfo-panel{
  background-color: white;
  border-radius: 20rpx;
  margin: 20rpx;
  padding: 20rpx;
}
.flex {
  display: flex;
  align-items: center;
}

.peisong-panel {
  width: 233rpx;
  background-color: #efefef;
  display: flex; 
   border-radius:40rpx;
}

.peisong-panel-1{
  width: 233rpx;
   border-radius:40rpx;
   color: #e64340;
   text-align: right;
}

.peisong-panel .active{
  background-color: #e64340;
  color: white;
  border-radius:40rpx;
  padding: 10rpx 20rpx;
}

.peisong-panel .ziqu, .peisong-panel .waimai{
  border-radius:40rpx;
  padding: 10rpx 20rpx;
}

.distance{
  color: #999;
  font-size: 30rpx;
}

.yaoqing-panel{
  margin-top: 40rpx;
  display: flex;
  justify-content: center;
}

.yaoqing-panel button{
  width: 240rpx;
}

.xiadan-panel{
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
}

.tag{
 margin-top: -60rpx;
 margin-left: -40rpx;
 background-color: #e64340;
 color: white;
 border-radius: 10rpx;
 font-size: 20rpx;
 padding: 10rpx;
 z-index: 10;
}

.no-order-tip{
  font-size: 28rpx;
}

.goods-panel{
  display: flex;
}

.goods-sku{
  color: #666;
  font-size:20rpx;
}
.count{
  margin-right: 30rpx;
  color: #666;
  font-size:20rpx;
}
.price{
  color: #e64340;
  font-size:20rpx;
  
}

.total{
  font-weight: bold;
  line-height: 100rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
}

.pay-pop-title{
  font-size: 40rpx;
  width: 100vw;
  text-align: center;
  height: 50rpx;
  line-height: 50rpx;
  margin-top: 30rpx;
  font-weight: bold;
}
.pay-pop-price{
  display: flex;
  padding: 10rpx 20rpx;
  height: 80rpx;
  align-items: center;
  margin-bottom: 20rpx;
  justify-self: center;
}

.pay-pop-price-title{
  flex:1;
  font-weight: bold;
}
.pay-pop-price-amount{
  width: 300rpx;
  text-align: left;
}