


page {
  background: #fffbe6;
  min-height: 100vh;
}

.wallet-card {
  margin: 40rpx 24rpx 24rpx 24rpx;
  background: #fff;
  border-radius: 32rpx;
  box-shadow: 0 8rpx 32rpx #f5e7b3;
  padding: 48rpx 0 32rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.wallet-title {
  color: #888;
  font-size: 28rpx;
  margin-bottom: 12rpx;
}
.wallet-amount {
  color: #222;
  font-size: 64rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}
.wallet-record {
  color: #bbb;
  font-size: 24rpx;
  margin-top: 8rpx;
}

.recharge-section {
  margin: 0 24rpx;
}
.recharge-title {
  color: #888;
  font-size: 28rpx;
  margin-bottom: 24rpx;
}
.recharge-options {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
  justify-content: space-between;
}
.recharge-btn {
  width: 44vw;
  background: #fff;
  border: 2rpx solid #ffe066;
  border-radius: 24rpx;
  padding: 32rpx 0;
  text-align: center;
  margin-bottom: 24rpx;
  box-sizing: border-box;
}
.recharge-btn.active {
  border: 2rpx solid #ffd600;
  background: #fffde7;
  color: #ffb800;
}
.recharge-btn .main {
  font-size: 36rpx;
  font-weight: bold;
}
.recharge-btn .sub {
  font-size: 24rpx;
  color: #bbb;
  margin-top: 8rpx;
}

.footer-btn {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 48rpx;
  padding: 0 48rpx;
}
.confirm-btn {
  width: 100%;
  height: 88rpx;
  background: #ffd600;
  color: #222;
  font-size: 32rpx;
  border-radius: 44rpx;
  font-weight: bold;
  border: none;
}